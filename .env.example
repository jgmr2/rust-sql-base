# Database Configuration
POSTGRES_DB=rustdb
POSTGRES_USER=rustuser
POSTGRES_PASSWORD=rustpass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# URL de conexión completa para Rust
DATABASE_URL=postgresql://rustuser:rustpass@postgres:5432/rustdb

# Configuración del API
API_PORT=80
API_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=change-this-in-production-use-a-strong-secret-key
JWT_EXPIRATION_HOURS=24

# Configuración de entorno
RUST_LOG=info
ENVIRONMENT=development
